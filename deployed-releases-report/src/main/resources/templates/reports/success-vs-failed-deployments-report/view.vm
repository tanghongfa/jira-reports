$webResourceManager.requireResourcesForContext("jira-report-plugin")

#if($isExcel == false)
<script>
AJS.$(document).ready(function() {
    AJS.$("#download-excel-link").attr("href", AJS.$(".excel a").attr("href"));
});
</script>
#end

<script type="text/javascript">
window.onload = function () {
    var chart = new CanvasJS.Chart("chartContainer",
    {
        title:{
            text: "Desktop Search Engine Market Share, Dec-2012"
        },
                animationEnabled: true,
        legend:{
            verticalAlign: "center",
            horizontalAlign: "left",
            fontSize: 20,
            fontFamily: "Helvetica"        
        },
        theme: "theme2",
        data: [
        {        
            type: "pie",       
            indexLabelFontFamily: "Garamond",       
            indexLabelFontSize: 20,
            indexLabel: "{label} {y}%",
            startAngle:-20,      
            showInLegend: true,
            toolTipContent:"{legendText} {y}%",
            dataPoints: [
                {  y: 83.24, legendText:"Google", label: "Google" },
                {  y: 8.16, legendText:"Yahoo!", label: "Yahoo!" },
                {  y: 4.67, legendText:"Bing", label: "Bing" },
                {  y: 1.67, legendText:"Baidu" , label: "Baidu"},       
                {  y: 0.98, legendText:"Others" , label: "Others"}
            ]
        }
        ]
    });
    chart.render();
}
</script>

<div id="chartContainer" style="height: 300px; width: 100%;"></div>
</body>

#if($isExcel == true)
<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
    text-align: center;
}
</style>
#end

<div style="padding: 5px">

#if($isExcel == true)
<p style="font-size: 24px;">Proteus Deployed Product Releases Report</p>
#end

<!--Only include this Excel Download Link in Web Report-->
#if($isExcel == false)
<div style="height: 12px;">
    <a id="download-excel-link" class="btn btn-default" href="#" role="button" style="float:right; clear:right;">Download Report as Excel</a>
</div>
#end

<!-- Display the report configuration -->
<div class="report-section-header">
Report Information:
</div>
<div>   
   <table class="table-desc">
       <tr><td>Project Name:</td><td>$projectName</td></tr>
       <tr><td>Time Period:</td><td>$dateTimeFormatter.format($startDate) - $dateTimeFormatter.format($endDate)</td></tr>       
       <tr><td>Generated On:</td><td>$dateTimeFormatter.format($today)</td></tr>
   </table>
</div>
<br />

<!--Report Details section-->
<div class="report-section-header">
Report Details:
</div>
<table class="table table-striped table-report">
    <thead>
	<tr>
        <th>Issue Id</th>
        <th>Title</th>
        <th>Component</th>
        <th>Version</th>
        #foreach ($env in $environments)
        <th>$env</th>
        #end  
    </tr>
	</thead>	
    #foreach ($issue in $issues)
        #if($issue.isEverDeployed())
            <tr>
            	<td>
            		<a href="/jira/browse/$issue.getIssueKey()">$issue.getIssueKey()</a>
            	</td>    	
            	<td>
            		$issue.getIssueTitle()
            	</td> 
            	<td>
            	    #foreach ($comp in $issue.getDeployedComponent())
            	    <p>$comp</p>
            	    #end            		
            	</td>
            	<td>
            		#foreach ($compVer in $issue.getDeployedVersion())
                    <p>$compVer</p>
                    #end  
            	</td>
            	#foreach ($env in $environments)
            	#set ($activity = false)
            	<td>
            	    #set ($activity = $issue.getLastSuccessDeploymentToEnv($env))            		
            		#if($activity)
            	       2s
            	    #else 
            	       ---
            		#end
            	</td>
            	#end      
            </tr>
        #end
    #end
</table>
</div>